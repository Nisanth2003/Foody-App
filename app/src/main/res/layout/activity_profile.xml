                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="206dp"
                    tools:layout_editor_absoluteY="61dp" />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:text="Medapati Nisanth"
                    android:textSize="25sp"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView39"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="@+id/imageView39"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="34dp"
                    tools:layout_conversion_absoluteWidth="199dp" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123@gmail.com"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView66"
                    app:layout_constraintStart_toStartOf="@+id/textView66"
                    app:layout_constraintTop_toBottomOf="@+id/textView66"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_conversion_absoluteWidth="147dp"
                    tools:layout_editor_absoluteX="132dp"
                    tools:layout_editor_absoluteY="94dp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton1"
                    style="@android:style/Widget.Button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="116dp"
                    android:background="@drawable/activity_white_gradient"
                    android:drawablePadding="20dp"
                    android:paddingStart="20dp"
                    android:text="My Reviews"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView67"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView67"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton2"
                    style="@android:style/Widget.Button"
                    android:layout_width="228dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/activity_white_gradient"
                    android:drawableStart="@drawable/edit"
                    android:drawablePadding="20dp"
                    android:paddingStart="20dp"
                    android:text="Account Settings"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profileButton1"
                    app:layout_constraintHorizontal_bias="0.162"
                    app:layout_constraintStart_toStartOf="@+id/profileButton1"
                    app:layout_constraintTop_toBottomOf="@+id/profileButton1"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton3"
