                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="@+id/profileButton2"
                    app:layout_constraintTop_toBottomOf="@+id/profileButton2"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton4"
                    style="@android:style/Widget.Button"
                    android:layout_width="195dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/activity_white_gradient"
                    android:drawableStart="@drawable/bell"
                    android:drawablePadding="20dp"
                    android:paddingStart="20dp"
                    android:text="Notification"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profileButton3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/profileButton3"
                    app:layout_constraintTop_toBottomOf="@+id/profileButton3"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton5"
                    style="@android:style/Widget.Button"
                    android:layout_width="249dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/activity_white_gradient"
                    android:drawableStart="@drawable/attantion"
                    android:drawablePadding="20dp"
                    android:paddingStart="20dp"
                    android:text="Security Settings"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profileButton4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/profileButton4"
                    app:layout_constraintTop_toBottomOf="@+id/profileButton4"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profileButton6"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redbuttongradient"
                    android:text="Home"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="60dp"
                    tools:layout_conversion_absoluteWidth="347dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="538dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>